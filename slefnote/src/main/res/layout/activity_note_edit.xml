<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhidisoft.slefnote.activity.NoteEditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBlue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="编写笔记"
            android:textSize="16sp"
            android:textColor="#ffffff"/>
        <ImageView
            android:id="@+id/iv_save"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/select_bg_unit_gou" />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:background="@null"
        android:hint="标题"
        android:maxLines="1"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ececec" />

    <EditText
        android:id="@+id/et_content"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:hint="内容"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_cancle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/black_detail_tool_back_enabled" />

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/black_detail_tool_time" />
    </RelativeLayout>
</LinearLayout>
