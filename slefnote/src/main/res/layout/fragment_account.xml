<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhidisoft.slefnote.fragment.AccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/title_account"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/tv_account">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="总资产"
                android:textSize="25dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="6124.0"
                android:textSize="25dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/tv_cash">

            <ImageView
                android:id="@+id/iv_cash"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_account_xianjin_new" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/iv_cash"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:text="现金金额"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="3124.0"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/tv_card">

            <ImageView
                android:id="@+id/iv_card"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_account_yinhangka" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/iv_card"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:text="储蓄卡余额"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="1000.0"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/tv_credit">

            <ImageView
                android:id="@+id/iv_credit"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_account_yinhangka" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/iv_credit"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:text="信用卡余额"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="1000.0"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/tv_alipay">

            <ImageView
                android:id="@+id/iv_alipay"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_account_zhifubao" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/iv_alipay"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:text="支付宝余额"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="1000.0"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
