<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhidisoft.slefnote">

    <application

        android:allowBackup="true"
        android:icon="@drawable/secretary"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.NoteActivity" />
        <activity android:name=".activity.NoteEditActivity" />
        <activity android:name=".activity.NoteDetailAct" />
        <activity android:name=".activity.BillActivity" />
        <activity android:name=".activity.TransferAct" />
        <activity
            android:name=".activity.WinActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"></activity>

        <provider
            android:name="com.zhidisoft.slefnote.provider.NoteProvider"
            android:authorities="com.zhidisoft.slefnote.provider"
            android:exported="true"
            ></provider>
        <!--<provider-->
            <!--android:name="com.zhidisoft.slefnote.myprovider.MyProviter"-->
            <!--android:authorities="com.zhidisoft.slefnote.myprovider"-->
            <!--android:exported="true"></provider>-->
    </application>

</manifest>